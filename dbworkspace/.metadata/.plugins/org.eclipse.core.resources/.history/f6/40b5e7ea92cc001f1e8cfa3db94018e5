<script type="text/javascript">
 $(function() {
	 $('button').click(function() {
		 //this : 이벤트가 발생한 그 객체
		 $(this).css("background-color",'black');
		 // 버튼을 누르면 눌러진 그 버튼이 소속된 td의 배경색을 검정으로
		 $(this).parent().css('background-color','black')
		 //눌러진 버튼이 소속된 테이블의 크기를 400px로 변경
		 
	 })
	 
 });
	
</script>
</script>

